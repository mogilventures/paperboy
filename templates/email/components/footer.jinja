{% macro render_footer(stats) -%}
  <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="width:100%; margin-top: {{ theme.spacing['32'] }};">
    <tr>
      <td class="email-border" style="border-top: 1px solid {{ theme.colors.border }}; padding-top: {{ theme.spacing['16'] }};">
        <div style="font-family: {{ theme.type.font_heading }}; font-size: {{ theme.type.sizes.lg }}; font-weight: 800; text-align: center;">
          Your Research Impact This Week
        </div>
        <div class="email-muted" style="margin-top: {{ theme.spacing['8'] }}; font-family: {{ theme.type.font_body }}; font-size: {{ theme.type.sizes.sm }}; text-align: center; line-height: {{ theme.type.line_height.normal }};">
          {{ stats.papers_processed }}+ papers processed &bull; {{ stats.articles_selected }} selected for you &bull; ~{{ stats.time_saved_minutes }} minutes saved
        </div>
        <div class="email-muted" style="margin-top: {{ theme.spacing['10'] }}; font-family: {{ theme.type.font_body }}; font-size: {{ theme.type.sizes.xs }}; text-align: center;">
          Generated by <strong class="email-text">Paperboy</strong> &bull; Accelerating research through intelligent curation
        </div>
      </td>
    </tr>
  </table>
{%- endmacro %}

