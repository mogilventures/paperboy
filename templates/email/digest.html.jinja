{% extends "layout.html.jinja" %}

{% from "components/header.jinja" import render_header %}
{% from "components/section_title.jinja" import section_title %}
{% from "components/article.jinja" import render_article %}
{% from "components/footer.jinja" import render_footer %}

{% block title %}Paperboy Digest - {{ date }}{% endblock %}

{% block preheader %}
{{ stats.paper_count }} papers, {{ stats.news_count }} news, {{ stats.reading_time_minutes }} min read — personalized for {{ user_name }}.
{% endblock %}

{% block content %}
  {{ render_header(date, user_name, user_title, stats) }}

  {% if highlights and highlights|length > 0 %}
    {{ section_title("Today's Highlights") }}
    <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="width:100%; margin-top: {{ theme.spacing['12'] }};">
      {% for h in highlights %}
        <tr>
          <td class="email-text" style="padding: {{ theme.spacing['6'] }} 0; font-family: {{ theme.type.font_body }}; font-size: {{ theme.type.sizes.sm }}; line-height: {{ theme.type.line_height.normal }}; color: {{ theme.colors.text }};">
            <span class="email-accent" style="color: {{ theme.colors.newsprint_red }}; font-weight: 900;">•</span>
            <strong class="email-h3" style="color: {{ theme.colors.text }};">{{ h.title }}:</strong>
            {{ h.insight }}
          </td>
        </tr>
      {% endfor %}
    </table>
  {% endif %}

  {% if directly_relevant and directly_relevant|length > 0 %}
    {{ section_title("Directly relevant to your work") }}
    {% for a in directly_relevant %}
      {{ render_article(a) }}
    {% endfor %}
  {% endif %}

  {% if expand_knowledge and expand_knowledge|length > 0 %}
    {{ section_title("Expand your knowledge") }}
    {% for a in expand_knowledge %}
      {{ render_article(a) }}
    {% endfor %}
  {% endif %}

  {% if quick_scan and quick_scan|length > 0 %}
    {{ section_title("Quick scan") }}
    <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="width:100%; margin-top: {{ theme.spacing['12'] }};">
      {% for a in quick_scan %}
        <tr>
          <td class="email-divider" style="padding: {{ theme.spacing['8'] }} 0; border-bottom: 1px solid {{ theme.colors.divider }};">
            <div class="email-h3" style="font-family: {{ theme.type.font_heading }}; font-size: {{ theme.type.sizes.h3 }}; font-weight: 800; color: {{ theme.colors.text }};">
              <span class="email-accent" style="color: {{ theme.colors.newsprint_red }}; font-weight: 900;">•</span> {{ a.title }}
              <span class="email-muted" style="font-family: {{ theme.type.font_mono }}; font-size: {{ theme.type.sizes.xs }}; font-weight: 400; color: {{ theme.colors.muted_text }};">
                (Score: {{ a.relevance_score }})
              </span>
            </div>
            {% if a.summary %}
              <div class="email-text" style="margin-top: {{ theme.spacing['6'] }}; font-family: {{ theme.type.font_body }}; font-size: {{ theme.type.sizes.sm }}; line-height: {{ theme.type.line_height.normal }}; color: {{ theme.colors.text }};">
                {{ a.summary[:120] }}{% if a.summary|length > 120 %}...{% endif %}
              </div>
            {% endif %}
            <div style="margin-top: {{ theme.spacing['8'] }};">
              <a class="email-link" href="{{ a.article_url }}" style="font-family: {{ theme.type.font_body }}; font-size: {{ theme.type.sizes.sm }}; text-decoration: underline; color: {{ theme.colors.link }};">
                Read →
              </a>
            </div>
          </td>
        </tr>
      {% endfor %}
    </table>
  {% endif %}

  {{ render_footer(stats) }}
{% endblock %}
